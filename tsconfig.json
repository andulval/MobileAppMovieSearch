{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    ".eslintrc.json",
    "./src/**/*",
    "./babel.config.js",
    "./jest.config.js"
  ],
  "exclude": [
    "node_modules/*"
  ],
  "extends": "expo/tsconfig.base"
}
